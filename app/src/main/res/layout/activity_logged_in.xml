<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phoenix.xlambton.LoggedInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/super_agents" />

    <Button
        android:id="@+id/buttonViewAgentList"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/icon_list"
        android:text="View List"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:paddingRight="30dp"/>


    <Button
        android:id="@+id/buttonSearchAgent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonViewAgentList"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/icon_search"
        android:text="Search Agent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:paddingRight="30dp" />

    <Button
        android:id="@+id/buttonAddAgent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSearchAgent"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/icon_add"
        android:text="Add Agent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingRight="30dp" />

</RelativeLayout>
