<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phoenix.xlambton.MissionUpdate">

    <TextView
        android:id="@+id/textViewTitleMissionUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="Mission Update"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textViewTitleMissionUpdate"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView1_MU"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textViewTitleMissionUpdate"
            app:srcCompat="@drawable/ic_image"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/imageView2_MU"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_image" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView3_MU"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textViewTitleMissionUpdate"
            app:srcCompat="@drawable/ic_image"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/imageView4_MU"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_image"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/buttonSendMMS_MU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Send MMS"
        android:textSize="25dp"/>

</RelativeLayout>
