<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="5dp">

    <ImageView
        android:id="@+id/agentRowImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/agentRowName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/agentRowImageView"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:text="John Shepard"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/agentRowLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/agentRowImageView"
        android:layout_below="@+id/agentRowName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Level: 004"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
</RelativeLayout>